<Window x:Class="AnimationsHomeWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnimationsHomeWork"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="canvas" Background="LightGray" Height="30" Width="400">
            <Rectangle x:Name="rectangle" Height="{Binding ElementName=canvas, Path=Height}" Width="10" Fill="Red"></Rectangle>
        </Canvas>
    </Grid>
</Window>
